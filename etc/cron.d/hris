SHELL=/bin/bash
PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
MAILTO=""

# Ads Master: setiap 1 jam
0 * * * * www-data flock -n /var/run/hris/cron_ads_master.lock -c 'cd /var/www/html/hris && ./hris_env/bin/python3 manage.py cron_ads_master >> /var/log/hris/cron_ads_master.log 2>&1'

# Ads Campaign: setiap 10 menit, lalu Ads Country 10 menit setelah campaign selesai
*/10 * * * * www-data flock -n /var/run/hris/cron_ads_campaign.lock -c 'cd /var/www/html/hris && ./hris_env/bin/python3 manage.py cron_ads_campaign >> /var/log/hris/cron_ads_campaign.log 2>&1 && sleep 600 && ./hris_env/bin/python3 manage.py cron_ads_country >> /var/log/hris/cron_ads_country.log 2>&1'

# AdX Domain: setiap 5 menit, lalu AdX Country 5 menit setelah domain selesai
*/5 * * * * www-data flock -n /var/run/hris/cron_adx_domain.lock -c 'cd /var/www/html/hris && ./hris_env/bin/python3 manage.py cron_adx_domain >> /var/log/hris/cron_adx_domain.log 2>&1 && sleep 300 && ./hris_env/bin/python3 manage.py cron_adx_country >> /var/log/hris/cron_adx_country.log 2>&1'